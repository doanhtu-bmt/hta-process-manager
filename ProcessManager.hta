<html>
<head>
<HTA:APPLICATION ID="Process Manager" ICON="Yahoo.ico" MAXIMIZEBUTTON="yes" border="thin" BORDERSTYLE="normal" CAPTION="yes" showInTaskbar="yes" innerBorder="yes" scroll="yes" singleInstance="yes" selection="no" version="1.0" />
<title>Process Manager</title>

<style>
.main-table-border { border: 1px solid black }
table {
  font-family: arial, sans-serif;
  font-size: 10pt;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 3px;
}
</style>

<script type="text/jscript">
// More info about GetObject("WinMgmts:").InstancesOf("Win32_Process"), see: https://docs.microsoft.com/en-us/windows/win32/cimwin32prov/win32-process

function teminateProcess(processId, processName){
	if (confirm('Are you sure you want to terminate the process "' + processName + '"?')) {
		var WshShell = new ActiveXObject("WScript.Shell");
		var oExec = WshShell.Exec("taskkill /F /PID " + processId, 0);
	}
}

function getProcessListAndDisplayInHTML()
{
	var procs = GetObject("WinMgmts:").InstancesOf("Win32_Process");
	var tableRowsHTML = "";
	var i = 1
	procEnum = new Enumerator(procs);
  
	for ( ; !procEnum.atEnd(); procEnum.moveNext())
	{
		var proc = procEnum.item(); 
		tableRowsHTML += 	'<tr><td>' + i.toString()
							+ '</td><td>' + proc.Name
							+ '</td><td>' + proc.ProcessID 
							+ '</td><td>' + proc.ParentProcessID
							+ '</td><td>' + proc.Status							
							+ '</td><td>' + proc.Description
							+ '</td><td>' + proc.ThreadCount							
							+ '</td><td><button onclick=\'teminateProcess(' + proc.ProcessID.toString() + ', "' + proc.Name + '")\'>Terminate</button></td></tr>\n';
		i++;
	}
	
	var htmlTable = '<table><tr><th>No.</th><th>Process Name</th><th>Process ID</th><th>Parent Process ID</th><th>Status</th>'
					+'<th>Description</th><th>Thread Count</th><th>Action</th></tr>\n' + tableRowsHTML + '</table>'
	
	return htmlTable;
}

function getSysRunningProccesses()
{
  var oOutput = document.getElementById("processDisplay");
  oOutput.innerHTML = "";
  oOutput.innerHTML = getProcessListAndDisplayInHTML();
}

window.onload = function() {
	getSysRunningProccesses()
}
refreshInterval = setInterval(getSysRunningProccesses, 1000);
</script>
</head>

<body bgcolor="#FFFFFF">
<div id="processDisplay" cols="30" rows="40"></div>
</body>
</html>



